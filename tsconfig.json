{
  "compilerOptions": {
    "target": "es2019",
    "module": "ES6",
    "outDir": "./Dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*"
  ]
}
